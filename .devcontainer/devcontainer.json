{
    "name": "Python 3.11 with Jupyter and PDF Preview",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",

	"customizations": {    
		"vscode": {
		  "extensions": [
			"ms-python.python",
			"ms-toolsai.jupyter",
			"analytic-signal.preview-pdf",
			"ms-python.vscode-pylance",
			"ms-python.pylint",
			"ms-python.autopep8"
		  ]
		}
	  },

	"postCreateCommand": "pip install -r requirements.txt"
}